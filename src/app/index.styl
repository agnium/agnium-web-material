@import url("http://fonts.googleapis.com/css?family=Exo+2:400,700")
@import url("http://fonts.googleapis.com/css?family=Oxygen:400,700|Oxygen+Mono")

$font-header = "Exo 2.0", "Helvetica Neue", "Arial", sans-serif
$font-body = "Oxygen", sans-serif

html
  font-family $font-body

body
  color #b71c1c

[layout=row]
  flex-direction row

h1, h2, h3
  font-family $font-header
  margin-top 0
  margin-bottom 0
  padding 0 0 20px 0

h1
  font-family $font-header

p
  margin 10px 0
  &.small
    margin 0
    font-size 1em

a
  text-decoration none
  color #fff

hr
  margin 0
  height 10px
  border 0
  &.top
    box-shadow 0 -15px 15px -15px #757575 inset
  &.bottom
    box-shadow 0 15px 15px -15px #757575 inset

section
  &.jumbotron
    margin-top 0
    margin-bottom 0
    padding 2% 5%
    background-color #931717
    text-align left
    color white
    background-image url('/assets/images/bg.jpg')
    background-position right
    background-repeat no-repeat
    &.vertical-center
      min-height 100%
      min-height 75vh
      display flex
      align-items center
    h1
      font-size 1.8em
  text-align center
  padding 30px 20px
  &#with
    padding 10px 0
  p, span
    font-size 1.4em

code
  font-family 'Oxygen Mono'

footer
  text-align center
  padding 2em 0
  background-color #b71c1c
  color #fff

#logo
  width 48px
  height 48px
  margin 0 30px

#with, #what, #who, #where, #social
  background-color #e53935
  color #ffffff

#social-links
  padding 20px 0
  margin 0 auto
  width 90%

#where
  address
    text-align left
    font-style normal
  h2
    margin-top 20px
    margin-bottom 20px
  a
    color #fff
  span, p
    font-size 21px

#map
  background #777777
  width 50%
  height 100%
  float right

md-toolbar
  position fixed
  top 0
  left 0
  right 0
  &.md-default-theme
    background-color hsla(0,0%,100%,0.9)

md-card
  min-height 50px

md-card-content
  padding 0 16px
  color #b71c1c

md-whiteframe
  background #fff
  margin 20px
  padding 20px
  width 75%
  margin 0 auto

.md-button
  text-transform none
  &.md-raised
    margin 10px 10px
  header &, & span
    font-family $font-header
    font-size 1em

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

.courses, .services, .members
  display flex
  flex-flow row wrap
  md-card
    a
      min-height 100px
      padding-top 20px
    img
      width auto

.clients
  display flex
  flex-flow row wrap
  img
    width auto
    padding 20px

.members
  md-card
    width 40%
    img
      &.pull-right
        float right
        width 100px

.cta
  text-transform uppercase
  font-size 1.2em
  &.long
    width 300px
    margin-left 0
  &.big
    font-size 1.6em
    line-height 60px
    width 90%

.more
  font-size 1.6em

.no-border
  border-top-color none

.where-details
  margin 20px 10%

@media (min-width 960px)

  section
    &.jumbotron
      padding 5% 10%
      h1
        font-size 3em
    padding 90px 30px

  .md-button
    margin-left 30px
    margin-right 30px
    header &
      width 100px
      padding 2px 10px

  .courses, .services
    md-card
      width 20%

  .members
    md-card
      width 20%

  .cta
    &.long
      width 360px
    &.big
      height 60px
      width 600px

@media (max-width 960px)

  .desktop
    display none

  section
    &.jumbotron
      background-position 80% 0%

@media (max-width 420px)

  section
    padding 60px 0

