@import url("http://fonts.googleapis.com/css?family=Exo+2:400,700")
@import url("http://fonts.googleapis.com/css?family=Oxygen:400,700|Oxygen+Mono")

$font-header = "Exo 2", sans-serif
$font-body = "Oxygen", sans-serif
$font-code = "Oxygen Mono", sans-serif

html
  font-family $font-body

body
  color #b71c1c

[layout=row]
  flex-direction row

h1, h2, h3, h4, h5, h6
  font-family $font-header
  padding 20px 0

h3, h4, h5, h6
  margin-top 0
  margin-bottom 0

h1
  font-family $font-header

p
  margin 15px
  &.small
    margin 0
    font-size 1em

a
  text-decoration none
  color #b71c1c
  &:hover
    text-decoration underline
  i
    color #fff
    margin 15px

hr
  margin 0
  height 10px
  border 0
  &.top
    box-shadow 0 -15px 15px -15px #757575 inset
  &.bottom
    box-shadow 0 15px 15px -15px #757575 inset

section
  text-align center
  padding 60px 0
  &.jumbotron
    margin-top 0
    margin-bottom 0
    padding 2% 5%
    background-color #931717
    text-align left
    color white
    background-image url('/assets/images/bg.jpg')
    background-position right
    background-repeat no-repeat
    &.vertical-center
      min-height 100%
      min-height 75vh
      display flex
      align-items center
    h1
      font-size 1.8em
  p, span
    font-size 1.2em

code
  font-family $font-code

footer
  text-align center
  padding 2em 0
  background-color #b71c1c
  color #fff

#logo
  width 48px
  height 48px

#ticker, #where, #social
  background-color #e53935
  color #fff

#ticker
  padding 0
  height 20px

#where
  padding-bottom 10px
  address
    text-align left
    font-style normal
    .fn
      text-align center
      font-size 1.6em
    .side
      display inline-block
    a.md-button:not(.md-icon-button)
      text-align left
      font-family $font-body
      vertical-align middle
    a.md-icon-button
      vertical-align middle
  h2
    margin-top 20px
    margin-bottom 20px
  span, p
    font-size 21px
  .maps
    height 300px
    md-card-content
      background #9CCC65
  .contact
    // height 100%

md-card
  min-height 50px
  md-card-content
    padding 30px 10px
    color #b71c1c

md-whiteframe
  background #fff
  margin 20px
  padding 20px
  width 75%
  margin 0 auto

.md-button
  text-transform none
  &.md-fab md-icon
    color #fff
  &.md-raised
    margin 10px 10px
  header &, & span
    font-family $font-header
    font-size 1em

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

.courses, .services, .members
  display flex
  flex-flow row wrap
  md-card
    width 80%
    a
      min-height 100px
      padding-top 40px
    img
      width auto
      height 100px

.clients
  display flex
  flex-flow row wrap
  img
    width auto
    padding 20px

.members
  md-card
    width 40%
    img
      &.pull-right
        float right
        width 100px

.cta
  text-transform uppercase
  font-size 1.2em
  &.long
    width 300px
    margin-left 0
  &.big
    font-size 1.6em
    line-height 60px
    width 90%

.no-border
  border-top-color none

@media (min-width 480px)

  section
    padding 60px 20px
    &.jumbotron
      h1
        font-size 2.2em
    p, span
      font-size 1.4em

@media (min-width 960px)

  section
    &.jumbotron
      padding 5% 10%
      h1
        font-size 3em
    padding 90px 30px

  .md-button
    header &
      width 100px
      padding 2px 10px
    #where &
      margin 0

  .courses, .services
    md-card
      width 20%

  .members
    md-card
      width 20%

  .cta
    &.long
      width 360px
    &.big
      height 60px
      width 600px

  .more
    font-size 1.6em

@media (max-width 480px)

  .desktop
    display none

  .mobile
    display inline

  section
    &.jumbotron
      background-position 80% 0%

