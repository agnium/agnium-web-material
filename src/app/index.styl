@import url("//fonts.googleapis.com/css?family=Oxygen+Mono|Oxygen:400,700")

html
  font-family 'Oxygen', sans-serif

body
  color #b71c1c

[layout=row]
  flex-direction row

h1, h2, h3
  padding 20px 0
  margin-top 0
  margin-bottom 0

section
  &.jumbotron
    margin-top 0
    margin-bottom 0
    padding 5% 10%
    background-color #931717
    text-align left
    color white
    background-image url('/assets/images/bg.jpg')
    background-position right
    background-repeat no-repeat
    &.vertical-center
      min-height 100%
      min-height 75vh
      display flex
      align-items center
    h1
      font-size 3em
  text-align center
  padding 60px 0
  &#with
    padding 10px 0

code
  font-family 'Oxygen Mono'

section
  p, span
    font-size 1.2em

footer
  text-align center
  padding 2em 0
  background-color #b71c1c
  color #fff

#logo
  width 48px
  height 48px
  margin 0 30px

#with, #where, #social
  background-color #e53935
  color #ffffff

#where .contact
  text-align left

md-toolbar
  &.md-default-theme
    background-color white

md-card
  min-height 50px

md-whiteframe
  background #fff
  margin 20px
  padding 20px
  width 75%
  margin 0 auto

.md-button
  text-transform none
  header &
    font-size 1em
    text-transform uppercase

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

.courses, .services, .members
  display flex
  flex-flow row wrap
  md-card
    img
      width 30%

.clients
  display flex
  flex-flow row wrap
  img
    width auto
    padding 20px

.members
  display flex
  flex-flow row wrap
  md-card
    img
      &.pull-right
        float right
        width 50px

.cta
  text-transform uppercase
  &.long
    width 360px
    margin-left 0
  &.big
    font-size 1.2em
    line-height 60px
    height 60px
    width 600px

.more
  font-size 1.6em

.no-border
  border-top-color none

@media (min-width: 960px)
  .md-button
    margin-left 30px
    margin-right 30px
    header &
      width 100px
      padding 2px 10px
  .courses, .services, .members
      display flex
      flex-flow row wrap
      md-card
        width 20%

@media (max-width: 960px)
  .desktop
    display none

